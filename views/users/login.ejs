<% layout("/layouts/boiler")%>

<div class="row justify-content-center mt-5">
  <div class="col-6">
    <!-- Outer styled box -->
    <div style="background-color: #ffffff; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.15); padding: 40px;">

      <h3 class="text-center fw-semibold" style="color: black;">
        Login on AI Based Destination Explorer
      </h3>

      <hr style="border-top: 2px solid #007bff; width: 60%; margin: 15px auto;">

      <form action="/login" method="POST" autocomplete="off" class="needs-validation" novalidate>
        
        <div class="mb-3">
          <label for="username" class="form-label fw-semibold">Username</label>
          <input
            name="username"
            id="username"
            type="text"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label fw-semibold">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            class="form-control"
            autocomplete="new-password"
            required
          />
        </div>

        <button class="btn btn-primary w-100 py-2 fs-5 fw-semibold" style="border-radius: 8px;">Login</button>

        <div class="text-center mt-3">
          Donâ€™t have an account? 
          <a href="/signup" class="text-primary text-decoration-none fw-semibold">SignUp</a>
        </div>
      </form>

    </div>
  </div>
</div>
