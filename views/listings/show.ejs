<% layout("/layouts/boiler") %>

<body>
  <div class="container mt-4">
    <div class="row g-4">
      <!-- LEFT: Listing details -->
      <div class="col-lg-6">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top show-img"
            alt="listing_image"
            style="height: 350px; object-fit: cover;"
          />
          <div class="card-body">
            <h3 class="fw-bold mb-2 text-dark"><%= listing.title %></h3>
            <p class="text-muted mb-1">Owned by: <i><%= listing.owner.username %></i></p>
            <p class="mb-1"><%= listing.description %></p>
            <p class="fw-semibold text-success">&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
            <p class="mb-0"><i class="bi bi-geo-alt"></i> <%= listing.location %>, <%= listing.country %></p>

            <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
              <div class="mt-3 d-flex gap-2">
                <a href="/listings/<%= listing._id %>/edit/" class="btn btn-dark flex-fill">Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="flex-fill">
                  <button class="btn btn-danger w-100">Delete</button>
                </form>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Emergency section -->
        <div class="mt-4 p-3 bg-light rounded-4 shadow-sm">
          <h4 class="text-danger mb-3">ğŸš¨ Stay Safe â€“ Know Who to Call</h4>

          <div class="d-flex align-items-center mb-3">
            <div class="fs-2 me-3">ğŸ‘®</div>
            <div>
              <h6 class="mb-0">Local Police</h6>
              <small>Dial 102 for immediate assistance</small>
            </div>
          </div>

          <div class="d-flex align-items-center mb-3">
            <div class="fs-2 me-3">ğŸ¥</div>
            <div>
              <h6 class="mb-0">Nearby Hospital</h6>
              <small>CityCare Hospital - +996 555 123 456</small>
            </div>
          </div>

          <div class="d-flex align-items-center mb-3">
            <div class="fs-2 me-3">ğŸ¢</div>
            <div>
              <h6 class="mb-0">Your Country Embassy</h6>
              <small>Pakistani Embassy â€“ +996 312 123 789</small>
            </div>
          </div>

          <button class="btn btn-outline-dark w-100 rounded-pill">ğŸ“² Save to My Travel Wallet</button>
        </div>
      </div>

      <!-- RIGHT: Reviews -->
      <div class="col-lg-6">
        <% if (currUser) { %>
          <div class="card border-0 shadow-sm rounded-4 mb-4 p-3">
            <h4 class="fw-semibold mb-3">Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
              <label class="form-label">Rating</label>
              <fieldset class="starability-slot" style="display: inline-block; vertical-align: middle;">
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" checked />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>

              <div class="mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments.</div>
              </div>

              <button class="btn btn-outline-dark mt-3 w-100">Submit</button>
            </form>
          </div>
        <% } %>

        <h5 class="fw-bold text-dark mb-3">â­ All Reviews</h5>
        <div class="reviews-container overflow-auto" style="max-height: 320px; scrollbar-width: thin;">
          <% if (listing.reviews.length === 0) { %>
            <p class="text-muted">No reviews yet. Be the first to share your thoughts!</p>
          <% } %>

          <% for (review of listing.reviews) { %>
            <div class="card border-0 shadow-sm mb-3 rounded-4">
              <div class="card-body">
                <h6 class="card-title mb-1 text-dark">@<%= review.author.username %></h6>
                <p class="starability-result card-text mb-1" data-rating="<%= review.rating %>" style="line-height: 1;"></p>
                <p class="card-text mb-2"><%= review.comment %></p>

                <% if (currUser && currUser._id.equals(review.author._id)) { %>
                  <div class="d-flex justify-content-end">
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                      <button class="btn btn-sm btn-outline-danger rounded-pill px-3">Delete</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>


